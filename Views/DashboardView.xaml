<UserControl x:Class="PcPerformanceManager.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:PcPerformanceManager.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900">
    <Grid>
        <StackPanel>
            <!-- Header Section -->
            <Grid Margin="0,0,0,32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="System Overview" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="#F0F6FC"/>
                    <TextBlock Text="Monitor your system performance in real-time" 
                               FontSize="14" 
                               Foreground="#8B949E"
                               Margin="0,6,0,0"/>
                </StackPanel>
                
                <!-- Refresh Button -->
                <Button Grid.Column="1" 
                        Command="{Binding RefreshDataCommand}"
                        IsEnabled="{Binding IsRefreshing, Converter={StaticResource InverseBooleanConverter}}"
                        Style="{StaticResource PrimaryButton}"
                        Padding="20,12">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ”„" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="Refresh"/>
                    </StackPanel>
                </Button>
            </Grid>
            
            <!-- Status Message Bar -->
            <Border Background="#161B22" 
                    Padding="16" 
                    CornerRadius="10" 
                    Margin="0,0,0,24"
                    BorderThickness="1"
                    BorderBrush="#30363D">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" 
                            Width="8" Height="8" 
                            CornerRadius="4" 
                            Background="#3FB950"
                            Margin="0,0,12,0"/>
                    <TextBlock Grid.Column="1" 
                               Text="{Binding StatusMessage}" 
                               FontSize="14" 
                               Foreground="#8B949E"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- System Stats Cards -->
            <UniformGrid Columns="4" Margin="0,0,0,32">
                <!-- CPU Card -->
                <Border Margin="0,0,12,0" CornerRadius="16" Padding="24"
                        Background="#161B22" BorderThickness="1" BorderBrush="#30363D">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Icon & Title -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <Border Width="40" Height="40" CornerRadius="10" Margin="0,0,12,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#2058A6FF" Offset="0"/>
                                        <GradientStop Color="#1058A6FF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="ðŸ’»" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="CPU" FontSize="16" FontWeight="SemiBold" Foreground="#8B949E" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Value -->
                        <TextBlock Grid.Row="1" 
                                   Text="{Binding CpuUsage, Mode=OneWay, StringFormat='{}{0:F1}%'}" 
                                   FontSize="36" 
                                   FontWeight="Bold" 
                                   Foreground="#58A6FF"
                                   Margin="0,0,0,12"/>
                        
                        <!-- Progress Bar -->
                        <ProgressBar Grid.Row="2" 
                                     Value="{Binding CpuUsage, Mode=OneWay}" 
                                     Maximum="100" 
                                     Height="6"
                                     Style="{StaticResource ModernProgressBar}"
                                     Margin="0,0,0,16"/>
                        
                        <!-- CPU Info -->
                        <TextBlock Grid.Row="3" 
                                   Text="{Binding SystemInfo.CpuName, Mode=OneWay}" 
                                   FontSize="11" 
                                   Foreground="#484F58"
                                   TextWrapping="Wrap"
                                   TextTrimming="CharacterEllipsis"
                                   MaxHeight="32"/>
                        
                        <TextBlock Grid.Row="4" Margin="0,8,0,0" FontSize="12" Foreground="#8B949E">
                            <Run Text="Cores: "/>
                            <Run Text="{Binding SystemInfo.CpuCores, Mode=OneWay}" Foreground="#F0F6FC"/>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- RAM Card -->
                <Border Margin="6,0" CornerRadius="16" Padding="24"
                        Background="#161B22" BorderThickness="1" BorderBrush="#30363D">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <Border Width="40" Height="40" CornerRadius="10" Margin="0,0,12,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#20F78166" Offset="0"/>
                                        <GradientStop Color="#10F78166" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="ðŸ§ " FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="RAM" FontSize="16" FontWeight="SemiBold" Foreground="#8B949E" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1" 
                                   Text="{Binding MemoryUsedDisplay, Mode=OneWay}" 
                                   FontSize="36" 
                                   FontWeight="Bold" 
                                   Foreground="#F78166"
                                   Margin="0,0,0,12"/>
                        
                        <ProgressBar Grid.Row="2" 
                                     Value="{Binding MemoryInfo.UsedPercentage, Mode=OneWay}" 
                                     Maximum="100" 
                                     Height="6"
                                     Style="{StaticResource ProgressBarOrange}"
                                     Margin="0,0,0,16"/>
                        
                        <TextBlock Grid.Row="3" 
                                   Text="{Binding MemoryInfo.UsedPercentage, Mode=OneWay, StringFormat='{}{0:F1}% Used'}" 
                                   FontSize="12" 
                                   Foreground="#8B949E"/>
                        
                        <Button Grid.Row="4" 
                                Content="Clear RAM" 
                                Command="{Binding QuickRamCleanupCommand}"
                                Style="{StaticResource DangerButton}"
                                Padding="12,8"
                                FontSize="12"
                                Margin="0,12,0,0"
                                HorizontalAlignment="Left"/>
                    </Grid>
                </Border>

                <!-- Disk Card -->
                <Border Margin="6,0" CornerRadius="16" Padding="24"
                        Background="#161B22" BorderThickness="1" BorderBrush="#30363D">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <Border Width="40" Height="40" CornerRadius="10" Margin="0,0,12,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#20D29922" Offset="0"/>
                                        <GradientStop Color="#10D29922" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="ðŸ’¾" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Disk" FontSize="16" FontWeight="SemiBold" Foreground="#8B949E" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1" 
                                   Text="{Binding DiskUsedDisplay, Mode=OneWay}" 
                                   FontSize="36" 
                                   FontWeight="Bold" 
                                   Foreground="#D29922"
                                   Margin="0,0,0,12"/>
                        
                        <ProgressBar Grid.Row="2" 
                                     Value="{Binding SystemInfo.UsedDiskPercentage, Mode=OneWay}" 
                                     Maximum="100" 
                                     Height="6"
                                     Style="{StaticResource ProgressBarPurple}"
                                     Margin="0,0,0,16"/>
                        
                        <TextBlock Grid.Row="3" FontSize="12" Foreground="#8B949E">
                            <Run Text="{Binding SystemInfo.FreeDiskGB, Mode=OneWay, StringFormat='{}{0:F1}'}"/>
                            <Run Text=" GB Free"/>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- Power Plan Card -->
                <Border Margin="12,0,0,0" CornerRadius="16" Padding="24"
                        Background="#161B22" BorderThickness="1" BorderBrush="#30363D">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <Border Width="40" Height="40" CornerRadius="10" Margin="0,0,12,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#203FB950" Offset="0"/>
                                        <GradientStop Color="#103FB950" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="âš¡" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Power" FontSize="16" FontWeight="SemiBold" Foreground="#8B949E" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1" 
                                   Text="{Binding ActivePowerPlan.Name, Mode=OneWay, FallbackValue='Unknown'}" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="#3FB950"
                                   TextTrimming="CharacterEllipsis"
                                   Margin="0,0,0,8"/>
                        
                        <TextBlock Grid.Row="2" 
                                   Text="{Binding ActivePowerPlan.Description, Mode=OneWay, FallbackValue='No active plan'}" 
                                   FontSize="11" 
                                   Foreground="#484F58"
                                   TextWrapping="Wrap"
                                   MaxHeight="40"
                                   Margin="0,0,0,12"/>
                        
                        <Button Grid.Row="3" 
                                Content="Manage" 
                                Command="{Binding OpenPowerViewCommand}"
                                Style="{StaticResource SuccessButton}"
                                Padding="12,8"
                                FontSize="12"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"/>
                    </Grid>
                </Border>
            </UniformGrid>

            <!-- Quick Actions Section -->
            <TextBlock Text="Quick Actions" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#F0F6FC"
                       Margin="0,0,0,20"/>
            
            <UniformGrid Columns="3">
                <!-- RAM Management -->
                <Border Margin="0,0,10,0" CornerRadius="14" Cursor="Hand">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#58A6FF" Offset="0"/>
                            <GradientStop Color="#388BFD" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Button Command="{Binding OpenRamViewCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Padding="24,20">
                        <StackPanel>
                            <TextBlock Text="ðŸ§ " FontSize="28" Margin="0,0,0,12"/>
                            <TextBlock Text="RAM Management" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                            <TextBlock Text="Optimize memory usage" 
                                       FontSize="12" 
                                       Foreground="#CCFFFFFF"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Button>
                </Border>
                
                <!-- Power Management -->
                <Border Margin="5,0" CornerRadius="14" Cursor="Hand">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#3FB950" Offset="0"/>
                            <GradientStop Color="#238636" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Button Command="{Binding OpenPowerViewCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Padding="24,20">
                        <StackPanel>
                            <TextBlock Text="âš¡" FontSize="28" Margin="0,0,0,12"/>
                            <TextBlock Text="Power Management" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                            <TextBlock Text="Control power plans" 
                                       FontSize="12" 
                                       Foreground="#CCFFFFFF"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Button>
                </Border>
                
                <!-- Disk Cleanup -->
                <Border Margin="10,0,0,0" CornerRadius="14" Cursor="Hand">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#A371F7" Offset="0"/>
                            <GradientStop Color="#8957E5" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Button Command="{Binding OpenCleanupViewCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Padding="24,20">
                        <StackPanel>
                            <TextBlock Text="ðŸ§¹" FontSize="28" Margin="0,0,0,12"/>
                            <TextBlock Text="Disk Cleanup" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                            <TextBlock Text="Free up disk space" 
                                       FontSize="12" 
                                       Foreground="#CCFFFFFF"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Button>
                </Border>
            </UniformGrid>
        </StackPanel>
    </Grid>
</UserControl>

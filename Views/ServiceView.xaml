<UserControl x:Class="PcPerformanceManager.Views.ServiceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:PcPerformanceManager.Converters"
             xmlns:models="clr-namespace:PcPerformanceManager.Models"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="0,0,10,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{StaticResource ServicesTitle}" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="#F0F6FC"/>
                    <TextBlock Text="{StaticResource ServicesSubtitle}" 
                               FontSize="14" 
                               Foreground="#8B949E"
                               Margin="0,8,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1"
                        Command="{Binding LoadServicesCommand}"
                        IsEnabled="{Binding IsRefreshing, Converter={StaticResource InverseBooleanConverter}}"
                        Style="{StaticResource PrimaryButton}"
                        Padding="24,14">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ”„" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="{StaticResource Refresh}" FontSize="14"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Statistics Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Total Services Card -->
                <Border Grid.Column="0" CornerRadius="16" Padding="20,18"
                        Background="#161B22" BorderThickness="1" BorderBrush="#30363D">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Width="40" Height="40" CornerRadius="10" Margin="0,0,12,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#20A371F7" Offset="0"/>
                                        <GradientStop Color="#10A371F7" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="âš™ï¸" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Toplam" FontSize="13" Foreground="#8B949E" VerticalAlignment="Center" TextWrapping="Wrap"/>
                        </StackPanel>
                        <TextBlock Text="{Binding Services.Count, Mode=OneWay}" 
                                   FontSize="32" FontWeight="Bold" Foreground="#A371F7"/>
                    </StackPanel>
                </Border>
                
                <!-- Running Services Card -->
                <Border Grid.Column="2" CornerRadius="16" Padding="20,18"
                        Background="#161B22" BorderThickness="1" BorderBrush="#30363D">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Width="40" Height="40" CornerRadius="10" Margin="0,0,12,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#203FB950" Offset="0"/>
                                        <GradientStop Color="#103FB950" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="â–¶ï¸" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Ã‡alÄ±ÅŸan" FontSize="13" Foreground="#8B949E" VerticalAlignment="Center" TextWrapping="Wrap"/>
                        </StackPanel>
                        <TextBlock Text="{Binding RunningCount, Mode=OneWay}" 
                                   FontSize="32" FontWeight="Bold" Foreground="#3FB950"/>
                    </StackPanel>
                </Border>
                
                <!-- Stopped Services Card -->
                <Border Grid.Column="4" CornerRadius="16" Padding="20,18"
                        Background="#161B22" BorderThickness="1" BorderBrush="#30363D">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Width="40" Height="40" CornerRadius="10" Margin="0,0,12,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#20F85149" Offset="0"/>
                                        <GradientStop Color="#10F85149" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="â¸ï¸" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Durduruldu" FontSize="13" Foreground="#8B949E" VerticalAlignment="Center" TextWrapping="Wrap"/>
                        </StackPanel>
                        <TextBlock Text="{Binding StoppedCount, Mode=OneWay}" 
                                   FontSize="32" FontWeight="Bold" Foreground="#F85149"/>
                    </StackPanel>
                </Border>
                
                <!-- Automatic Services Card -->
                <Border Grid.Column="6" CornerRadius="16" Padding="20,18"
                        Background="#161B22" BorderThickness="1" BorderBrush="#30363D">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Width="40" Height="40" CornerRadius="10" Margin="0,0,12,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#20D29922" Offset="0"/>
                                        <GradientStop Color="#10D29922" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="ðŸ”„" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Otomatik" FontSize="13" Foreground="#8B949E" VerticalAlignment="Center" TextWrapping="Wrap"/>
                        </StackPanel>
                        <TextBlock Text="{Binding AutomaticCount, Mode=OneWay}" 
                                   FontSize="32" FontWeight="Bold" Foreground="#D29922"/>
                    </StackPanel>
                </Border>
                
                <!-- Critical Services Card -->
                <Border Grid.Column="8" CornerRadius="16" Padding="20,18"
                        Background="#161B22" BorderThickness="1" BorderBrush="#30363D">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Width="40" Height="40" CornerRadius="10" Margin="0,0,12,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#20F85149" Offset="0"/>
                                        <GradientStop Color="#10F85149" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="âš ï¸" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Kritik" FontSize="13" Foreground="#8B949E" VerticalAlignment="Center" TextWrapping="Wrap"/>
                        </StackPanel>
                        <TextBlock Text="{Binding CriticalCount, Mode=OneWay}" 
                                   FontSize="32" FontWeight="Bold" Foreground="#F85149"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Action Buttons -->
            <Grid Grid.Row="2" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0"
                        Command="{Binding SelectAllCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Padding="18,12"
                        MinWidth="120">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âœ“" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="TÃ¼mÃ¼nÃ¼ SeÃ§" FontSize="13"/>
                    </StackPanel>
                </Button>
                
                <Button Grid.Column="2"
                        Command="{Binding DeselectAllCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Padding="18,12"
                        MinWidth="130">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âœ—" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="SeÃ§imi KaldÄ±r" FontSize="13"/>
                    </StackPanel>
                </Button>
                
                <Button Grid.Column="4"
                        Command="{Binding SelectRunningCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Padding="18,12"
                        MinWidth="130">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="â–¶ï¸" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="Ã‡alÄ±ÅŸanlar" FontSize="13"/>
                    </StackPanel>
                </Button>
                
                <Button Grid.Column="6"
                        Command="{Binding SelectSafeToStopCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Padding="18,12"
                        MinWidth="160">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âœ…" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="GÃ¼venli Durdur" FontSize="13"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Services List -->
            <Grid Grid.Row="3">
                <Border CornerRadius="16" 
                        Padding="0"
                        Background="#161B22" 
                        BorderThickness="1" 
                        BorderBrush="#30363D">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Services}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:WindowsService}">
                                    <Border Margin="16,12,16,12"
                                            CornerRadius="12"
                                            Padding="20"
                                            Background="#21262D"
                                            BorderThickness="1"
                                            BorderBrush="#30363D">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Checkbox -->
                                            <CheckBox Grid.Column="0"
                                                      IsChecked="{Binding IsSelected}"
                                                      Margin="0,0,24,0"
                                                      VerticalAlignment="Center"
                                                      Foreground="#F0F6FC"/>
                                            
                                            <!-- Service Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,0,24,0">
                                                <TextBlock Text="{Binding DisplayName}" 
                                                           FontSize="16" 
                                                           FontWeight="SemiBold"
                                                           Foreground="#F0F6FC"
                                                           Margin="0,0,0,8"/>
                                                <TextBlock Text="{Binding Description}" 
                                                           FontSize="12" 
                                                           Foreground="#8B949E"
                                                           TextWrapping="Wrap"
                                                           Margin="0,0,0,8"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                                    <Border CornerRadius="6" 
                                                            Padding="6,4" 
                                                            Margin="0,0,8,0"
                                                            Background="#30363D">
                                                        <TextBlock Text="{Binding StartTypeDisplay}" 
                                                                   FontSize="11" 
                                                                   Foreground="#8B949E"/>
                                                    </Border>
                                                    <Border CornerRadius="6" 
                                                            Padding="6,4" 
                                                            Margin="0,0,8,0"
                                                            Background="#30363D"
                                                            Visibility="{Binding Category, Converter={StaticResource StringToVisibilityConverter}}">
                                                        <TextBlock Text="{Binding Category}" 
                                                                   FontSize="11" 
                                                                   Foreground="#8B949E"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontSize="11" 
                                                               Foreground="#6E7681"
                                                               VerticalAlignment="Center"
                                                               FontStyle="Italic"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <!-- Status Badge -->
                                            <Border Grid.Column="2"
                                                    CornerRadius="6"
                                                    Padding="14,10"
                                                    Margin="0,0,16,0"
                                                    VerticalAlignment="Center"
                                                    MinWidth="100"
                                                    HorizontalAlignment="Center"
                                                    Background="{Binding Status, Converter={StaticResource ServiceStatusToColorConverter}}">
                                                <TextBlock Text="{Binding StatusDisplay}" 
                                                           FontSize="12" 
                                                           FontWeight="SemiBold"
                                                           Foreground="White"
                                                           TextAlignment="Center"/>
                                            </Border>
                                            
                                            <!-- Start/Stop Button -->
                                            <Button Grid.Column="3"
                                                    Command="{Binding DataContext.StartServiceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    IsEnabled="{Binding DataContext.IsProcessing, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource InverseBooleanConverter}}"
                                                    Style="{StaticResource SuccessButton}"
                                                    Padding="20,12"
                                                    Margin="0,0,12,0"
                                                    VerticalAlignment="Center"
                                                    MinWidth="120"
                                                    Visibility="{Binding Status, Converter={StaticResource ServiceStatusToVisibilityConverter}, ConverterParameter=Running}">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="â–¶ï¸" FontSize="12" Margin="0,0,6,0"/>
                                                    <TextBlock Text="BaÅŸlat" FontSize="13" FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </Button>
                                            
                                            <Button Grid.Column="3"
                                                    Command="{Binding DataContext.StopServiceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    IsEnabled="{Binding DataContext.IsProcessing, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource InverseBooleanConverter}}"
                                                    Style="{StaticResource DangerButton}"
                                                    Padding="20,12"
                                                    Margin="0,0,12,0"
                                                    VerticalAlignment="Center"
                                                    MinWidth="120"
                                                    Visibility="{Binding Status, Converter={StaticResource ServiceStatusToVisibilityConverter}, ConverterParameter=Stopped}">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="â¸ï¸" FontSize="12" Margin="0,0,6,0"/>
                                                    <TextBlock Text="Durdur" FontSize="13" FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </Button>
                                            
                                            <!-- Start Type Buttons -->
                                            <StackPanel Grid.Column="4"
                                                        Orientation="Vertical"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,0,0">
                                                <TextBlock Text="{Binding StartTypeDisplay}" 
                                                           FontSize="11" 
                                                           Foreground="#8B949E"
                                                           Margin="0,0,0,8"
                                                           HorizontalAlignment="Center"/>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <Button Command="{Binding DataContext.ChangeStartupTypeToAutomaticAsyncCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource SecondaryButton}"
                                                            Padding="8,6"
                                                            FontSize="10"
                                                            MinWidth="70"
                                                            Margin="0,0,4,0"
                                                            ToolTip="Otomatik">
                                                        <TextBlock Text="Auto"/>
                                                    </Button>
                                                    <Button Command="{Binding DataContext.ChangeStartupTypeToManualAsyncCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource SecondaryButton}"
                                                            Padding="8,6"
                                                            FontSize="10"
                                                            MinWidth="70"
                                                            Margin="0,0,4,0"
                                                            ToolTip="Manuel">
                                                        <TextBlock Text="Manuel"/>
                                                    </Button>
                                                    <Button Command="{Binding DataContext.ChangeStartupTypeToDisabledAsyncCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource DangerButton}"
                                                            Padding="8,6"
                                                            FontSize="10"
                                                            MinWidth="70"
                                                            ToolTip="Devre DÄ±ÅŸÄ±">
                                                        <TextBlock Text="Kapat"/>
                                                    </Button>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                        
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="BorderBrush" Value="#58A6FF"/>
                                                        <Setter Property="Background" Value="#1C2128"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
                
                <!-- Status Message -->
                <TextBlock Text="{Binding StatusMessage}"
                           FontSize="12"
                           Foreground="#8B949E"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           Margin="20,0,0,20"
                           Opacity="0.8"/>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>

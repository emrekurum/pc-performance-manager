<UserControl x:Class="PcPerformanceManager.Views.DiskAnalyzerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:PcPerformanceManager.Converters"
             xmlns:models="clr-namespace:PcPerformanceManager.Models"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="0,0,10,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{StaticResource DiskAnalyzerTitle}" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="#F0F6FC"/>
                    <TextBlock Text="{StaticResource DiskAnalyzerSubtitle}" 
                               FontSize="14" 
                               Foreground="#8B949E"
                               Margin="0,8,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1"
                        Command="{Binding LoadDisksCommand}"
                        IsEnabled="{Binding IsAnalyzing, Converter={StaticResource InverseBooleanConverter}}"
                        Style="{StaticResource PrimaryButton}"
                        Padding="24,14">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ”„" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="{StaticResource Refresh}" FontSize="14"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Tabs -->
            <Grid Grid.Row="1" Margin="0,0,0,24">
                <StackPanel Orientation="Horizontal">
                    <Button Command="{Binding SelectDiskTabCommand}"
                            Padding="20,12"
                            Margin="0,0,12,0"
                            MinWidth="150">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentTab}" Value="Disks">
                                        <Setter Property="Background" Value="{StaticResource AccentGradientCyan}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource AccentCyanBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ’¾" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="Diskler" FontSize="13"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding SelectFoldersTabCommand}"
                            Padding="20,12"
                            Margin="0,0,12,0"
                            MinWidth="150">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentTab}" Value="Folders">
                                        <Setter Property="Background" Value="{StaticResource AccentGradientCyan}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource AccentCyanBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="KlasÃ¶rler" FontSize="13"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding SelectLargeFilesTabCommand}"
                            Padding="20,12"
                            MinWidth="150">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentTab}" Value="LargeFiles">
                                        <Setter Property="Background" Value="{StaticResource AccentGradientCyan}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource AccentCyanBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“„" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="BÃ¼yÃ¼k Dosyalar" FontSize="13"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Content Area -->
            <Grid Grid.Row="2">
                <!-- Disks Tab -->
                <Grid Visibility="{Binding CurrentTab, Converter={StaticResource TabVisibilityConverter}, ConverterParameter=Disks}">
                    <Border CornerRadius="16" 
                            Padding="0"
                            Background="#161B22" 
                            BorderThickness="1" 
                            BorderBrush="#30363D">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding Disks}" Margin="16">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type models:DiskInfo}">
                                        <Border Margin="0,0,0,16"
                                                CornerRadius="12"
                                                Padding="24"
                                                Cursor="Hand"
                                                MouseLeftButtonDown="DiskBorder_MouseLeftButtonDown">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#21262D"/>
                                                    <Setter Property="BorderThickness" Value="1"/>
                                                    <Setter Property="BorderBrush" Value="#30363D"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                            <Setter Property="Background">
                                                                <Setter.Value>
                                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                        <GradientStop Color="#1558A6FF" Offset="0"/>
                                                                        <GradientStop Color="#0A58A6FF" Offset="1"/>
                                                                    </LinearGradientBrush>
                                                                </Setter.Value>
                                                            </Setter>
                                                            <Setter Property="BorderBrush" Value="#58A6FF"/>
                                                            <Setter Property="BorderThickness" Value="2"/>
                                                        </DataTrigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#262B35"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Disk Icon -->
                                                <Border Grid.Column="0" Width="64" Height="64" CornerRadius="12" Margin="0,0,24,0"
                                                        Background="{Binding UsedPercentage, Mode=OneWay, Converter={StaticResource DiskUsageToColorConverter}}">
                                                    <TextBlock Text="ðŸ’¾" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                
                                                <!-- Disk Info -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding DisplayName, Mode=OneWay}" 
                                                               FontSize="20" 
                                                               FontWeight="SemiBold"
                                                               Foreground="#F0F6FC"
                                                               Margin="0,0,0,8"/>
                                                    <TextBlock Text="{Binding UsedDisplay, Mode=OneWay}" 
                                                               FontSize="14" 
                                                               Foreground="#8B949E"
                                                               Margin="0,0,0,8"/>
                                                    <ProgressBar Value="{Binding UsedPercentage, Mode=OneWay}" 
                                                                 Maximum="100" 
                                                                 Height="8"
                                                                 Style="{StaticResource ModernProgressBar}"
                                                                 Margin="0,0,0,8"/>
                                                    <TextBlock Text="{Binding FileSystem, Mode=OneWay}" 
                                                               FontSize="12" 
                                                               Foreground="#6E7681"/>
                                                </StackPanel>
                                                
                                                <!-- Disk Stats -->
                                                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="24,0,0,0">
                                                    <TextBlock Text="{Binding FreeGB, Mode=OneWay, StringFormat='BoÅŸ: {0:F1} GB'}" 
                                                               FontSize="13" 
                                                               Foreground="#3FB950"
                                                               Margin="0,0,0,8"/>
                                                    <TextBlock Text="{Binding UsedPercentage, Mode=OneWay, StringFormat='KullanÄ±m: {0:F1}%'}" 
                                                               FontSize="13" 
                                                               Foreground="#F78166"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </Grid>
                
                <!-- Folders Tab -->
                <Grid Visibility="{Binding CurrentTab, Converter={StaticResource TabVisibilityConverter}, ConverterParameter=Folders}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Folders Actions -->
                    <Border Grid.Row="0" CornerRadius="16" Padding="20,16" Margin="0,0,0,16"
                            Background="#161B22" BorderThickness="1" BorderBrush="#30363D">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <ComboBox ItemsSource="{Binding Disks}"
                                          SelectedItem="{Binding SelectedDisk}"
                                          DisplayMemberPath="DisplayName"
                                          Width="200"
                                          Margin="0,0,16,0">
                                    <ComboBox.Style>
                                        <Style TargetType="ComboBox">
                                            <Setter Property="Background" Value="#21262D"/>
                                            <Setter Property="Foreground" Value="#F0F6FC"/>
                                            <Setter Property="BorderBrush" Value="#30363D"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Setter Property="Padding" Value="12,10"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ComboBox">
                                                        <Grid>
                                                            <ToggleButton Name="ToggleButton" 
                                                                          Grid.Column="2" 
                                                                          Focusable="false"
                                                                          ClickMode="Press"
                                                                          IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}">
                                                                <ToggleButton.Template>
                                                                    <ControlTemplate TargetType="ToggleButton">
                                                                        <Border Background="{TemplateBinding Background}"
                                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                                CornerRadius="6">
                                                                            <Grid>
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition/>
                                                                                    <ColumnDefinition Width="20"/>
                                                                                </Grid.ColumnDefinitions>
                                                                                <ContentPresenter HorizontalAlignment="Left" 
                                                                                                  VerticalAlignment="Center"
                                                                                                  Margin="12,0,0,0"/>
                                                                                <Path x:Name="Arrow" 
                                                                                      Grid.Column="1" 
                                                                                      Fill="#8B949E" 
                                                                                      HorizontalAlignment="Center" 
                                                                                      VerticalAlignment="Center" 
                                                                                      Data="M 0 0 L 4 4 L 8 0 Z"/>
                                                                            </Grid>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </ToggleButton.Template>
                                                            </ToggleButton>
                                                            <ContentPresenter Name="ContentSite" 
                                                                              IsHitTestVisible="False" 
                                                                              Content="{TemplateBinding SelectionBoxItem}"
                                                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                              Margin="12,0,23,0"
                                                                              VerticalAlignment="Center"
                                                                              HorizontalAlignment="Left"/>
                                                            <TextBox x:Name="PART_EditableTextBox"
                                                                     Style="{x:Null}"
                                                                     HorizontalAlignment="Left"
                                                                     VerticalAlignment="Center"
                                                                     Margin="12,0,23,0"
                                                                     Focusable="True"
                                                                     Background="Transparent"
                                                                     Visibility="Hidden"
                                                                     IsReadOnly="{TemplateBinding IsReadOnly}"/>
                                                            <Popup Name="Popup"
                                                                   Placement="Bottom"
                                                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                                                   AllowsTransparency="True"
                                                                   Focusable="False"
                                                                   PopupAnimation="Slide">
                                                                <Grid Name="DropDown"
                                                                      SnapsToDevicePixels="True"
                                                                      MinWidth="{TemplateBinding ActualWidth}"
                                                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                                    <Border x:Name="DropDownBorder"
                                                                            Background="#21262D"
                                                                            BorderThickness="1"
                                                                            BorderBrush="#30363D"
                                                                            CornerRadius="6"
                                                                            Margin="0,4,0,0">
                                                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                                                        </ScrollViewer>
                                                                    </Border>
                                                                </Grid>
                                                            </Popup>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Resources>
                                                <Style TargetType="ComboBoxItem">
                                                    <Setter Property="Background" Value="#21262D"/>
                                                    <Setter Property="Foreground" Value="#F0F6FC"/>
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                    <Setter Property="Padding" Value="12,8"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsHighlighted" Value="True">
                                                            <Setter Property="Background" Value="#30363D"/>
                                                        </Trigger>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter Property="Background" Value="#1A58A6FF"/>
                                                            <Setter Property="Foreground" Value="#F0F6FC"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Style.Resources>
                                        </Style>
                                    </ComboBox.Style>
                                </ComboBox>
                                
                                <Button Command="{Binding AnalyzeFolderSizesCommand}"
                                        IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBooleanConverter}}"
                                        Style="{StaticResource PrimaryButton}"
                                        Padding="20,12"
                                        MinWidth="180">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ”" FontSize="14" Margin="0,0,8,0"/>
                                        <TextBlock Text="KlasÃ¶r Analizi" FontSize="13"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="{Binding TotalFoldersCount, StringFormat='Toplam: {0} klasÃ¶r'}" 
                                           FontSize="13" 
                                           Foreground="#8B949E"
                                           Margin="0,0,16,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalFolderSizeGB, StringFormat='Boyut: {0:F2} GB'}" 
                                           FontSize="13" 
                                           Foreground="#8B949E"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Folders List -->
                    <Border Grid.Row="1" CornerRadius="16" Padding="0"
                            Background="#161B22" BorderThickness="1" BorderBrush="#30363D">
                        <DataGrid ItemsSource="{Binding FolderSizes}"
                                  AutoGenerateColumns="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="None"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  RowBackground="#21262D"
                                  AlternatingRowBackground="#1C2128"
                                  SelectionMode="Single"
                                  IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="KlasÃ¶r AdÄ±" Binding="{Binding Name}" Width="*">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#161B22"/>
                                            <Setter Property="Foreground" Value="#F0F6FC"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="16,12"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#F0F6FC"/>
                                            <Setter Property="Padding" Value="16,12"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="Boyut" Binding="{Binding SizeDisplay}" Width="120">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#161B22"/>
                                            <Setter Property="Foreground" Value="#F0F6FC"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="16,12"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#58A6FF"/>
                                            <Setter Property="Padding" Value="16,12"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="Ä°Ã§erik" Binding="{Binding ItemCountDisplay}" Width="200">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#161B22"/>
                                            <Setter Property="Foreground" Value="#F0F6FC"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="16,12"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#8B949E"/>
                                            <Setter Property="Padding" Value="16,12"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
                
                <!-- Large Files Tab -->
                <Grid Visibility="{Binding CurrentTab, Converter={StaticResource TabVisibilityConverter}, ConverterParameter=LargeFiles}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Large Files Actions -->
                    <Border Grid.Row="0" CornerRadius="16" Padding="20,16" Margin="0,0,0,16"
                            Background="#161B22" BorderThickness="1" BorderBrush="#30363D">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <ComboBox Grid.Column="0" ItemsSource="{Binding Disks}"
                                      SelectedItem="{Binding SelectedDisk}"
                                      DisplayMemberPath="DisplayName"
                                      Width="200"
                                      Margin="0,0,16,0"
                                      Background="#21262D"
                                      Foreground="#F0F6FC"
                                      BorderBrush="#30363D"
                                      BorderThickness="1"
                                      Padding="12,10"/>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,16,0">
                                <TextBlock Text="Min:" 
                                           FontSize="13" 
                                           Foreground="#8B949E"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <TextBox Text="{Binding MinFileSizeMB}" 
                                         Width="80"
                                         Style="{StaticResource ModernTextBox}"/>
                                <TextBlock Text="MB" 
                                           FontSize="13" 
                                           Foreground="#8B949E"
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0"/>
                            </StackPanel>
                            
                            <Button Grid.Column="3"
                                    Command="{Binding FindLargeFilesCommand}"
                                    IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBooleanConverter}}"
                                    Style="{StaticResource PrimaryButton}"
                                    Padding="20,12"
                                    MinWidth="180">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ”" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="BÃ¼yÃ¼k DosyalarÄ± Bul" FontSize="13"/>
                                </StackPanel>
                            </Button>
                            
                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="{Binding TotalLargeFilesCount, StringFormat='Toplam: {0} dosya'}" 
                                           FontSize="13" 
                                           Foreground="#8B949E"
                                           Margin="0,0,16,0"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalLargeFilesSizeGB, StringFormat='Boyut: {0:F2} GB'}" 
                                           FontSize="13" 
                                           Foreground="#8B949E"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Large Files List -->
                    <Border Grid.Row="1" CornerRadius="16" Padding="0"
                            Background="#161B22" BorderThickness="1" BorderBrush="#30363D">
                        <DataGrid ItemsSource="{Binding LargeFiles}"
                                  AutoGenerateColumns="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="None"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  RowBackground="#21262D"
                                  AlternatingRowBackground="#1C2128"
                                  SelectionMode="Single"
                                  IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Dosya AdÄ±" Binding="{Binding Name}" Width="*">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#161B22"/>
                                            <Setter Property="Foreground" Value="#F0F6FC"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="16,12"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#F0F6FC"/>
                                            <Setter Property="Padding" Value="16,12"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="Konum" Binding="{Binding Directory}" Width="300">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#161B22"/>
                                            <Setter Property="Foreground" Value="#F0F6FC"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="16,12"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#8B949E"/>
                                            <Setter Property="Padding" Value="16,12"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="Boyut" Binding="{Binding SizeDisplay}" Width="120">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#161B22"/>
                                            <Setter Property="Foreground" Value="#F0F6FC"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="16,12"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#58A6FF"/>
                                            <Setter Property="Padding" Value="16,12"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="DeÄŸiÅŸtirilme" Binding="{Binding LastModifiedDisplay}" Width="150">
                                    <DataGridTextColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#161B22"/>
                                            <Setter Property="Foreground" Value="#F0F6FC"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                            <Setter Property="Padding" Value="16,12"/>
                                        </Style>
                                    </DataGridTextColumn.HeaderStyle>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#8B949E"/>
                                            <Setter Property="Padding" Value="16,12"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>

<UserControl x:Class="PcPerformanceManager.Views.StartupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:PcPerformanceManager.Converters"
             xmlns:models="clr-namespace:PcPerformanceManager.Models"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="0,0,10,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{StaticResource StartupTitle}" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="#F0F6FC"/>
                    <TextBlock Text="{StaticResource StartupSubtitle}" 
                               FontSize="14" 
                               Foreground="#8B949E"
                               Margin="0,8,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1"
                        Command="{Binding LoadStartupProgramsCommand}"
                        IsEnabled="{Binding IsRefreshing, Converter={StaticResource InverseBooleanConverter}}"
                        Style="{StaticResource PrimaryButton}"
                        Padding="24,14">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ”„" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="{StaticResource Refresh}" FontSize="14"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Statistics Cards -->
            <Grid Grid.Row="1" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Total Programs Card -->
                <Border Grid.Column="0" CornerRadius="16" Padding="24"
                        Background="#161B22" BorderThickness="1" BorderBrush="#30363D">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Border Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#20A371F7" Offset="0"/>
                                        <GradientStop Color="#10A371F7" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="ðŸ“‹" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Toplam Program" FontSize="14" Foreground="#8B949E" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="{Binding StartupPrograms.Count, Mode=OneWay}" 
                                   FontSize="36" FontWeight="Bold" Foreground="#A371F7"/>
                    </StackPanel>
                </Border>
                
                <!-- Enabled Programs Card -->
                <Border Grid.Column="2" CornerRadius="16" Padding="24"
                        Background="#161B22" BorderThickness="1" BorderBrush="#30363D">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Border Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#203FB950" Offset="0"/>
                                        <GradientStop Color="#103FB950" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="âœ…" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Etkin" FontSize="14" Foreground="#8B949E" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="{Binding EnabledCount, Mode=OneWay}" 
                                   FontSize="36" FontWeight="Bold" Foreground="#3FB950"/>
                    </StackPanel>
                </Border>
                
                <!-- Disabled Programs Card -->
                <Border Grid.Column="4" CornerRadius="16" Padding="24"
                        Background="#161B22" BorderThickness="1" BorderBrush="#30363D">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Border Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#20F85149" Offset="0"/>
                                        <GradientStop Color="#10F85149" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="âŒ" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Devre DÄ±ÅŸÄ±" FontSize="14" Foreground="#8B949E" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="{Binding DisabledCount, Mode=OneWay}" 
                                   FontSize="36" FontWeight="Bold" Foreground="#F85149"/>
                    </StackPanel>
                </Border>
                
                <!-- Estimated Startup Time Card -->
                <Border Grid.Column="6" CornerRadius="16" Padding="24"
                        Background="#161B22" BorderThickness="1" BorderBrush="#30363D">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Border Width="48" Height="48" CornerRadius="12" Margin="0,0,16,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#20D29922" Offset="0"/>
                                        <GradientStop Color="#10D29922" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="â±ï¸" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Tahmini SÃ¼re" FontSize="14" Foreground="#8B949E" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="{Binding EstimatedStartupTimeDisplay, Mode=OneWay}" 
                                   FontSize="36" FontWeight="Bold" Foreground="#D29922"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Action Buttons -->
            <Grid Grid.Row="2" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0"
                        Command="{Binding SelectAllCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Padding="18,12"
                        MinWidth="120">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âœ“" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="TÃ¼mÃ¼nÃ¼ SeÃ§" FontSize="13"/>
                    </StackPanel>
                </Button>
                
                <Button Grid.Column="2"
                        Command="{Binding DeselectAllCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Padding="18,12"
                        MinWidth="130">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âœ—" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="SeÃ§imi KaldÄ±r" FontSize="13"/>
                    </StackPanel>
                </Button>
                
                <Button Grid.Column="4"
                        Command="{Binding SelectHighImpactCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Padding="18,12"
                        MinWidth="130">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš " FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="YÃ¼ksek Etki" FontSize="13"/>
                    </StackPanel>
                </Button>
                
                <Button Grid.Column="6"
                        Command="{Binding SelectDisabledCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Padding="18,12"
                        MinWidth="130">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="â—‹" FontSize="14" Margin="0,0,8,0"/>
                        <TextBlock Text="Devre DÄ±ÅŸÄ±" FontSize="13"/>
                    </StackPanel>
                </Button>
                
                <Button Grid.Column="8"
                        Command="{Binding DisableSelectedCommand}"
                        IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBooleanConverter}}"
                        Style="{StaticResource DangerButton}"
                        Padding="24,14"
                        MinWidth="200">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸš«" FontSize="14" Margin="0,0,10,0"/>
                        <TextBlock Text="SeÃ§ilenleri Devre DÄ±ÅŸÄ± BÄ±rak" FontSize="13" FontWeight="SemiBold" TextWrapping="NoWrap"/>
                    </StackPanel>
                </Button>
                
                <Button Grid.Column="10"
                        Command="{Binding EnableSelectedCommand}"
                        IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBooleanConverter}}"
                        Style="{StaticResource SuccessButton}"
                        Padding="24,14"
                        MinWidth="200">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âœ“" FontSize="14" Margin="0,0,10,0"/>
                        <TextBlock Text="SeÃ§ilenleri EtkinleÅŸtir" FontSize="13" FontWeight="SemiBold" TextWrapping="NoWrap"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- Programs List -->
            <Grid Grid.Row="3">
                <Border CornerRadius="16" 
                        Padding="0"
                        Background="#161B22" 
                        BorderThickness="1" 
                        BorderBrush="#30363D">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding StartupPrograms}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:StartupProgram}">
                                    <Border Margin="16,12,16,12"
                                            CornerRadius="12"
                                            Padding="20"
                                            Background="#21262D"
                                            BorderThickness="1"
                                            BorderBrush="#30363D">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Checkbox -->
                                            <CheckBox Grid.Column="0"
                                                      IsChecked="{Binding IsSelected}"
                                                      Margin="0,0,24,0"
                                                      VerticalAlignment="Center"
                                                      Foreground="#F0F6FC"/>
                                            
                                            <!-- Program Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,0,24,0">
                                                <TextBlock Text="{Binding DisplayName}" 
                                                           FontSize="16" 
                                                           FontWeight="SemiBold"
                                                           Foreground="#F0F6FC"
                                                           Margin="0,0,0,8"/>
                                                <TextBlock Text="{Binding Command}" 
                                                           FontSize="12" 
                                                           Foreground="#8B949E"
                                                           TextTrimming="CharacterEllipsis"
                                                           Margin="0,0,0,8"
                                                           ToolTip="{Binding Command}"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                                    <Border CornerRadius="6" 
                                                            Padding="6,4" 
                                                            Margin="0,0,8,0"
                                                            Background="#30363D">
                                                        <TextBlock Text="{Binding LocationDisplay}" 
                                                                   FontSize="11" 
                                                                   Foreground="#8B949E"/>
                                                    </Border>
                                                    <Border CornerRadius="6" 
                                                            Padding="6,4" 
                                                            Margin="0,0,8,0"
                                                            Background="{Binding Impact, Converter={StaticResource ImpactToColorConverter}}">
                                                        <TextBlock Text="{Binding ImpactDisplay}" 
                                                                   FontSize="11" 
                                                                   FontWeight="SemiBold"
                                                                   Foreground="White"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding Publisher}" 
                                                               FontSize="11" 
                                                               Foreground="#8B949E"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                            <!-- Status Badge -->
                                            <Border Grid.Column="2"
                                                    CornerRadius="6"
                                                    Padding="14,10"
                                                    Margin="0,0,16,0"
                                                    VerticalAlignment="Center"
                                                    MinWidth="90"
                                                    HorizontalAlignment="Center"
                                                    Background="{Binding IsEnabled, Converter={StaticResource EnabledToBackgroundConverter}}">
                                                <TextBlock Text="{Binding IsEnabled, Converter={StaticResource EnabledToTextConverter}}" 
                                                           FontSize="12" 
                                                           FontWeight="SemiBold"
                                                           Foreground="White"
                                                           TextAlignment="Center"/>
                                            </Border>
                                            
                                            <!-- Toggle Button -->
                                            <Button Grid.Column="3"
                                                    Command="{Binding DataContext.ToggleStartupCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    IsEnabled="{Binding DataContext.IsProcessing, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource InverseBooleanConverter}}"
                                                    Style="{Binding IsEnabled, Converter={StaticResource EnabledToButtonStyleConverter}}"
                                                    Padding="24,14"
                                                    VerticalAlignment="Center"
                                                    MinWidth="180"
                                                    HorizontalAlignment="Stretch">
                                                <TextBlock Text="{Binding IsEnabled, Converter={StaticResource EnabledToToggleTextConverter}}" 
                                                           FontSize="13"
                                                           FontWeight="SemiBold"
                                                           TextWrapping="NoWrap"
                                                           TextAlignment="Center"/>
                                            </Button>
                                        </Grid>
                                        
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="BorderBrush" Value="#58A6FF"/>
                                                        <Setter Property="Background" Value="#1C2128"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
                
                <!-- Status Message -->
                <TextBlock Text="{Binding StatusMessage}"
                           FontSize="12"
                           Foreground="#8B949E"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           Margin="20,0,0,20"
                           Opacity="0.8"/>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>

<Application x:Class="PcPerformanceManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PcPerformanceManager"
             xmlns:converters="clr-namespace:PcPerformanceManager.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Styles and Themes -->
                <ResourceDictionary Source="Resources/Styles.xaml"/>
                
                <!-- Converters -->
                <ResourceDictionary>
                    <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
                    <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
                    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
                    <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
                    <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
                    <converters:BytesToGBConverter x:Key="BytesToGBConverter"/>
                    <converters:ImpactToColorConverter x:Key="ImpactToColorConverter"/>
                    <converters:EnabledToBackgroundConverter x:Key="EnabledToBackgroundConverter"/>
                    <converters:EnabledToTextConverter x:Key="EnabledToTextConverter"/>
                    <converters:EnabledToButtonStyleConverter x:Key="EnabledToButtonStyleConverter"/>
                    <converters:EnabledToToggleTextConverter x:Key="EnabledToToggleTextConverter"/>
                    <converters:ServiceStatusToColorConverter x:Key="ServiceStatusToColorConverter"/>
                    <converters:ServiceStatusToVisibilityConverter x:Key="ServiceStatusToVisibilityConverter"/>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
